{
  "name": "HelloWorld",
  "displayName": "Hello World 测试插件",
  "description": "用于测试 VCP 外部插件执行的简单插件",
  "version": "1.0.0",
  "author": "Cherry Studio",
  "category": "test",
  "tags": ["test", "demo"],
  "pluginType": "synchronous",
  "entryPoint": {
    "command": "python",
    "args": ["main.py"]
  },
  "communication": {
    "protocol": "stdio",
    "encoding": "utf-8",
    "timeout": 30000
  },
  "capabilities": {
    "toolFunctions": [
      {
        "name": "hello",
        "description": "返回问候语",
        "parameters": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "要问候的名字"
            }
          },
          "required": ["name"]
        }
      },
      {
        "name": "echo",
        "description": "回显输入内容",
        "parameters": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "description": "要回显的消息"
            }
          },
          "required": ["message"]
        }
      }
    ]
  },
  "configSchema": {
    "prefix": {
      "type": "string",
      "title": "问候前缀",
      "description": "添加到问候语前面的文字",
      "default": "你好"
    }
  },
  "defaultConfig": {
    "prefix": "你好"
  }
}
